{
  "manifest_version": 3,
  "name": "HackerSpace",
  "version": "1.0",
  "description": "A high-tech new tab experience with physics-based animations for hackers and students",
  "permissions": ["storage", "tabs"],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  }
} 